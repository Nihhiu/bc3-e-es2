<ul class="navbar-nav align-items-center">
@{
    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        <li class="nav-item">
            <a class="nav-link text-white text-primary" 
               asp-area="Identity" 
               asp-page="/Account/Manage/Index" 
               title="Manage">
                Hello, @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="d-inline" 
                  asp-area="Identity" 
                  asp-page="/Account/Logout" 
                  asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button type="submit" 
                        class="btn nav-link text-white text-primary p-0 border-0 bg-transparent"
                        style="text-decoration: none;">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white text-primary" 
               asp-area="Identity" 
               asp-page="/Account/Register">
               Resgister
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white text-primary" 
               asp-area="Identity" 
               asp-page="/Account/Login">
               Login
            </a>
        </li>
    }
}
</ul>
