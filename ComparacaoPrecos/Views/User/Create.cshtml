@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ComparacaoPrecos.Models.UserViewModel

@{
    ViewData["Title"] = "Criar Novo Utiliazdor";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h2 class="text-center text-primary fw-semibold mb-4">@ViewData["Title"]</h2>
                    <form asp-action="Create" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label fw-medium">Email</label>
                            <input asp-for="Username" class="form-control rounded-3" placeholder="Digite o email" />
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-medium">Senha</label>
                            <input asp-for="Password" type="password" class="form-control rounded-3" placeholder="Digite a senha" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Role" class="form-label fw-medium">Role</label>
                            <select asp-for="Role"
                                    asp-items="@(ViewData["Roles"] as IEnumerable<SelectListItem>)"
                                    class="form-select rounded-3">
                                <option value="">-- Selecione uma Role --</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary rounded-3 fw-semibold">
                                Criar Utilizador
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

