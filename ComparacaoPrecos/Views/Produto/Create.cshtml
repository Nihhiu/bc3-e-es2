@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ComparacaoPrecos.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Criar Produto";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title mb-4 text-center text-primary">Criar Produto</h2>

                    <form asp-action="criar" asp-controller="Produto" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Produto.Nome" class="form-label fw-semibold"></label>
                            <input asp-for="Produto.Nome" class="form-control" placeholder="Nome do produto" />
                            <span asp-validation-for="Produto.Nome" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Produto.CategoriaID" class="form-label fw-semibold">Categoria</label>
                            <select asp-for="Produto.CategoriaID" asp-items="@(ViewData["Categorias"] as List<SelectListItem>) " class="form-select">
                                <option value="">Selecione uma categoria</option>
                            </select>
                            <span asp-validation-for="Produto.CategoriaID" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Salvar Produto</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
