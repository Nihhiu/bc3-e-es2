@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ComparacaoPrecos.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Criar Produto";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title mb-4 text-center text-primary">Criar Produto</h2>

                    <form asp-action="criar" asp-controller="Produto" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-semibold"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Nome do produto" />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoriaID" class="form-label fw-semibold">Categoria</label>
                            <select asp-for="CategoriaID" asp-items="Model.Categorias" class="form-select">
                                <option value="">Selecione uma categoria</option>
                            </select>
                            <span asp-validation-for="CategoriaID" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <span class="fw-semibold me-2">Ver com estrat√©gia de loja:</span>

                            <a asp-controller="Produto" asp-action="Detalhes" 
                                asp-route-id="@Model.Id" asp-route-lojaNome="Default" 
                                class="btn btn-outline-secondary btn-sm me-2">
                                  Loja Default
                            </a>

                            <a asp-controller="Produto" asp-action="Detalhes" 
                                asp-route-id="@Model.Id" asp-route-lojaNome="LojacomDesconto" 
                                class="btn btn-outline-success btn-sm">
                                  Loja com Desconto
                            </a>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Salvar Produto</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
