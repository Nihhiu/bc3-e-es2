@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ComparacaoPrecos.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhes do Produto";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h2 class="card-title text-primary">@Model.Nome</h2>
            <p class="text-muted mb-4">
                <strong>Categoria:</strong> @Model.CategoriaID
            </p>

            <div class="mb-4"></div>
                <span class="fw-semibold me-2">Ver com estratégia de loja:</span>

                <a asp-controller="Produto" asp-action="Detalhes" 
                   asp-route-id="@Model.Id" asp-route-lojaNome="Default" 
                   class="btn btn-outline-secondary btn-sm me-2">
                    Loja Default
                </a>

                <a asp-controller="Produto" asp-action="Detalhes" 
                   asp-route-id="@Model.Id" asp-route-lojaNome="LojacomDesconto" 
                   class="btn btn-outline-success btn-sm">
                    Loja com Desconto
                </a>
            </div>


            <h4 class="mb-3">Lojas disponíveis</h4>

            @foreach (var loja in Model.InfoPorLoja)
            {
                <div class="card mb-3 shadow-sm border border-light-subtle">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-1">@loja.NomeLoja</h5>
                            <p class="card-text text-muted mb-0">Preço:</p>
                        </div>
                        <span class="fs-5 fw-semibold text-success">
                            @loja.Preco.ToString("C")
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
